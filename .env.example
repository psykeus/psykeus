# Supabase Configuration (Hosted on Hetzner via Coolify)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Server-side only (never expose to client)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# AI Configuration (for ingestion pipeline)
AI_API_KEY=sk-xxx
AI_MODEL=gpt-5-mini

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Redis Configuration (optional - for distributed rate limiting)
# If not configured, falls back to in-memory rate limiting
REDIS_URL=redis://localhost:6379

# Session Configuration
# Maximum session age in seconds (default: 30 days)
SESSION_MAX_AGE_SECONDS=2592000
